---
import Layout from '../../layouts/Layout.astro';
import { fetchAboutPage } from '../../utils/api.js';

const aboutData = await fetchAboutPage();
---
<Layout>
  <section class="mx-auto p-6 container">
    <h1 class="font-bold text-3xl">{aboutData?.data?.title || 'Default Title'}</h1> <!-- This line will be updated when title is added -->
    <p class="mt-4">{aboutData?.data?.description || 'Default Description'}</p>
  </section>
</Layout>
